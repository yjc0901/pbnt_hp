                    <form action="/contact/contact" method="POST">
                        <div class="form-row">
                            <div class="form-group">
                                <input type="text" name="name" placeholder="성함 *" required>
                            </div>
                            <div class="form-group">
                                <input type="text" name="company" placeholder="회사명 *" required>
                            </div>
