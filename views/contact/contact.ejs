                            <div class="form-group">
                                <input type="email" name="email" placeholder="E-mail *" required>
                            </div>
                            <div class="form-group">
                                <input type="tel" name="phone" placeholder="연락처 *" required>
                            </div>
                        </div>
        
                        <div class="form-group full-width">
